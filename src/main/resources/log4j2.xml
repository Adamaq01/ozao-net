<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="OzaoNet">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{dd/MM/yyyy HH:mm:ss}] [%level] [%logger{36}] - %msg%n"/>
        </Console>
        <File name="Logs" fileName="logs/ozao-net.log">
            <PatternLayout pattern="[%d{dd/MM/yyyy HH:mm:ss}] [%level] [%logger{36}] - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="OzaoNet" level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Logs"/>
        </Logger>
        <Root level="off">
        </Root>
    </Loggers>
</Configuration>
